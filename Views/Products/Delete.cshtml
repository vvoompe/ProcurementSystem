@model ProcurementSystem.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h2>Видалити продукт</h2>

<h3>Ви впевнені, що хочете видалити цей елемент?</h3>
<div>
    <h4>Продукт</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Name)</dt>
        <dd>@Html.DisplayFor(m => m.Name)</dd>

        <dt>@Html.DisplayNameFor(m => m.Price)</dt>
        <dd>@(Model.Price.ToString("C"))</dd>

        <dt>Категорія</dt>

        <dd>@(Model.Category?.Name ?? "—")</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Products", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)


    <div class="form-actions no-color" style="margin-top: 15px;">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @Html.ActionLink("Back to List", "Index")
    </div>
}