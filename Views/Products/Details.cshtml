@model ProcurementSystem.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Деталі продукту</h2>

<div>
    <h4>Продукт</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Name)</dt>
        <dd>@Html.DisplayFor(m => m.Name)</dd>

        <dt>@Html.DisplayNameFor(m => m.Description)</dt>
        <dd>@Html.DisplayFor(m => m.Description)</dd>

        <dt>@Html.DisplayNameFor(m => m.Price)</dt>
        <dd>@(Model.Price.ToString("C"))</dd>

        <dt>@Html.DisplayNameFor(m => m.Stock)</dt>
        <dd>@Html.DisplayFor(m => m.Stock)</dd>

        <dt>Категорія</dt>
        <dd>@(Model.Category?.Name ?? "—")</dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>