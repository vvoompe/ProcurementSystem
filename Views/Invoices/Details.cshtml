@model ProcurementSystem.Models.Invoice

@{
    ViewBag.Title = "Деталі Рахунку";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Рахунок</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Замовлення
        </dt>
        <dd>
            № @Html.DisplayFor(model => model.Order.Id) (від @Html.DisplayFor(model => model.Order.User.Login))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InvoiceDate)
        </dt>
        <dd>
            @Model.InvoiceDate.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<p style="margin-top: 15px;">
    @Html.ActionLink("Редагувати", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Назад до списку", "Index")
</p>