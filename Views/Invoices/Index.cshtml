@model IEnumerable<ProcurementSystem.Models.Invoice>

@{
    ViewBag.Title = "Рахунки";
}

<h2>Рахунки</h2>

<table class="table">
    <tr>
        <th>
            Замовлення #
        </th>
        <th>
            Користувач
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            Оплатити до
        </th>
        <th>
            Статус оплати
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.User.Login)
            </td>
            <td>
                @item.Amount.ToString("C")
            </td>
            <td>
                @item.DueDate.ToString("dd.MM.yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentStatus)
            </td>
            <td>
                @Html.ActionLink("Редагувати", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Деталі", "Details", new { id = item.Id }) |
                @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>