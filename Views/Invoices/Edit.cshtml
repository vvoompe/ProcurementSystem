@model ProcurementSystem.Models.Invoice

@{
    ViewBag.Title = "Редагування Рахунку";
}

<h2>Редагування Рахунку #@Model.Id</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Рахунок для Замовлення #@Model.OrderId</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-10">
                <strong>Сума: @Model.Amount.ToString("C")</strong> (Редагування суми заборонено)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.DueDate, "Оплатити до", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DueDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DueDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentStatus, "Статус оплати", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PaymentStatus", (SelectList)ViewBag.PaymentStatus, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PaymentStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Повернутися до Списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}