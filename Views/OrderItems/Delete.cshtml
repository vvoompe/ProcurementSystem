@model ProcurementSystem.Models.OrderItem

@{
    ViewBag.Title = "Видалення Позиції Замовлення";
}

<h2>Видалення Позиції Замовлення</h2>

<h3>Ви впевнені, що хочете видалити цю позицію?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div>
        <h4>Позиція Замовлення</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Замовлення #
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Order.Id) (@Html.DisplayFor(model => model.Order.Status))
            </dd>

            <dt>
                Товар
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Offer.Product.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Amount)
            </dd>

        </dl>

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-danger" /> |
            @Html.ActionLink("Повернутися до Списку", "Index")
        </div>
    </div>
}