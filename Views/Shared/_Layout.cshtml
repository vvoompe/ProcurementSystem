<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - АСВЗ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("АСВЗ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Переключить навигацию" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">

                <ul class="navbar-nav flex-grow-1">

                    @* Показуємо всі ці посилання ТІЛЬКИ ЯКЩО користувач залогінився *@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Товари", "Index", "Products", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Категорії", "Index", "Categories", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Постачальники", "Index", "Suppliers", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Пропозиції", "Index", "SupplierOffers", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Замовлення", "Index", "Orders", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Позиції (Items)", "Index", "OrderItems", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Рахунки", "Index", "Invoices", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Звіти", "Index", "Reports", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Зв'язки (ReportOrders)", "Index", "ReportOrders", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("LINQ", "Index", "LinqQuery", new { area = "" }, new { @class = "nav-link" })</li>

                        @* Показуємо посилання "Користувачі" ТІЛЬКИ АДМІНІСТРАТОРУ *@
                        if (User.IsInRole("АДМІНІСТРАТОР"))
                        {
                            <li>@Html.ActionLink("Користувачі", "Index", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @* Користувач залогінений: показуємо привітання та кнопку "Вийти" *@
                        <li>
                            <span class="nav-link text-light">Привіт, @User.Identity.Name!</span>
                        </li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Вийти</a>
                            }
                        </li>
                    }
                    else
                    {
                        @* Користувач - гість: показуємо кнопку "Увійти" *@
                        <li>@Html.ActionLink("Логін", "Login", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Автоматизація системи відділу закупівель</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>